<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/btn_activity_menu_media"
        android:layout_width="148dp"
        android:layout_height="146dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:padding="15dp"
        android:text="Media"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_activity_menu_record"
        android:layout_width="148dp"
        android:layout_height="146dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:padding="15dp"
        android:text="Grabar"
        app:layout_constraintBottom_toTopOf="@+id/btn_activity_menu_media"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_activity_menu_capture"
        android:layout_width="148dp"
        android:layout_height="146dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:padding="15dp"
        android:text="Foto"
        app:layout_constraintBottom_toTopOf="@+id/btn_activity_menu_send_loation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_activity_menu_record" />

    <Button
        android:id="@+id/btn_activity_menu_send_loation"
        android:layout_width="148dp"
        android:layout_height="146dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:padding="15dp"
        android:text="Localizacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_activity_menu_media" />
</androidx.constraintlayout.widget.ConstraintLayout>