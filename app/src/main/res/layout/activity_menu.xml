<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackmarble"
    tools:context=".Menu">
    //android:background="@drawable/marblebackground.jpg"


    <Button
        android:id="@+id/btn_activity_menu_media"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/marblebackground"
        android:padding="15dp"
        android:text="@string/media"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_menu_capture" />

    <Button
        android:id="@+id/btn_activity_menu_record"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/marblebackground"
        android:padding="15dp"
        android:text="@string/grabar"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_activity_menu_capture"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/marblebackground"
        android:padding="15dp"
        android:text="@string/tomar_foto"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_menu_record" />

    <Button
        android:id="@+id/btn_activity_menu_send_loation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/marblebackground"
        android:padding="15dp"
        android:text="@string/localizacion"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_menu_media" />

</androidx.constraintlayout.widget.ConstraintLayout>